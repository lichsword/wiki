<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:id="@id/BgImageView" android:layout_width="fill_parent" android:layout_height="fill_parent" android:scaleType="centerCrop" />
    <include layout="@layout/layout_setting_banner" />
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/setting_panel_wrap">
        <RelativeLayout style="@style/setting_activity_header">
            <Button android:id="@id/BackImageView" android:text="@string/adi_lock_privacy_title" android:onClick="onClick" style="@style/setting_header_title" />
        </RelativeLayout>
        <LinearLayout style="@style/setting_content_container">
            <RelativeLayout android:layout_width="fill_parent" android:layout_height="@dimen/settings_item_height" android:layout_marginLeft="@dimen/settings_margin_left" android:layout_marginRight="@dimen/settings_margin_right">
                <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/setting_privacy_show_sms_content" android:layout_toLeftOf="@id/SmsSwitchButton" android:layout_centerVertical="true" style="@style/setting_privacy_h1" />
                <com.alibaba.adi.collie.ui.view.SwitchButton android:id="@id/SmsSwitchButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
            </RelativeLayout>
            <RelativeLayout android:visibility="gone" android:layout_width="fill_parent" android:layout_height="@dimen/settings_item_height" android:layout_marginLeft="@dimen/settings_margin_left" android:layout_marginRight="@dimen/settings_margin_right">
                <TextView android:gravity="center_vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/setting_privacy_show_weibo_content" android:layout_toLeftOf="@id/WeiboSwitchButton" android:layout_centerVertical="true" style="@style/setting_privacy_h1" />
                <com.alibaba.adi.collie.ui.view.SwitchButton android:id="@id/WeiboSwitchButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>