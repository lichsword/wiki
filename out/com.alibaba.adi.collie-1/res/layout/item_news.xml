<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@color/none" android:layout_width="fill_parent" android:layout_height="fill_parent" style="@style/news_item_style"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:id="@id/TitleTextView" android:focusable="false" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/app_name" style="@style/news_title_text" />
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/news_attach_style">
        <TextView android:id="@id/SourceTextView" android:focusable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/app_name" style="@style/news_source_text" />
        <TextView android:id="@id/UpdateTimeTextView" android:focusable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/app_name" style="@style/news_update_time_text" />
    </LinearLayout>
    <com.alibaba.adi.collie.ui.view.AutoScaleImageView android:id="@id/ImageView" android:drawingCacheQuality="low" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/news_image_style" />
    <FrameLayout android:layout_gravity="center" android:id="@id/ImageLoadingLayout" android:background="@color/news_image_loading_background" android:layout_width="fill_parent" android:layout_height="@dimen/news_image_loading_height" style="@style/news_image_style">
        <ImageView android:layout_gravity="center" android:id="@id/ImageLoadingBackground" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/image_loading" />
        <ImageView android:layout_gravity="center" android:id="@id/ImageLoadingProgressBar" android:background="@anim/news_joke_loading_anim" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    </FrameLayout>
    <TextView android:id="@id/SummaryTextView" android:focusable="false" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/app_name" style="@style/news_summary_text" />
</LinearLayout>