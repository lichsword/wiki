<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" style="@style/qr_dialog_style"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:text="@string/kakalib_adi_title_text" style="@style/qr_dialog_title" />
    <ImageView android:layout_gravity="center_horizontal" style="@style/qr_dialog_title_border" />
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/qr_dialog_container">
        <ImageView android:id="@id/qr_product_img" android:layout_width="@dimen/qr_dialog_icon_size" android:layout_height="@dimen/qr_dialog_icon_size" android:layout_marginRight="12.0dip" android:src="@drawable/qr_scan_text" android:scaleType="centerInside" />
        <TextView android:ellipsize="end" android:id="@id/dailog_qr_content" android:layout_width="fill_parent" android:layout_height="wrap_content" android:maxLines="6" style="@style/qr_dialog_text_content" />
    </LinearLayout>
    <ImageView android:layout_gravity="center_horizontal" style="@style/qr_dialog_ctrl_border" />
    <Button android:id="@id/CancelButton" android:text="@string/cancel" style="@style/qr_dialog_cancel_button" />
</LinearLayout>