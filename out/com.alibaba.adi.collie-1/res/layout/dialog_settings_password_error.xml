<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" style="@style/setting_dialog_style"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:text="@string/setting_account_bind_error_title" style="@style/setting_dialog_title" />
    <View style="@style/setting_dialog_title_border" />
    <RelativeLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/setting_dialog_container">
        <TextView android:layout_gravity="center_horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/setting_account_bind_error_msg" style="@style/setting_dialog_text_content" />
    </RelativeLayout>
    <View style="@style/setting_dialog_ctrl_border" />
    <Button android:id="@id/PositiveView" android:text="@string/confirm" style="@style/setting_dialog_cancel_button" />
</LinearLayout>