<?xml version="1.0" encoding="utf-8"?>
<merge android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" style="@style/home_push_center_linearlayout">
        <ImageView android:layout_gravity="right" android:id="@id/close" android:background="@drawable/common_touch_bg" android:visibility="visible" android:src="@drawable/push_icon_close" android:scaleType="center" style="@style/home_push_center_close_button" />
        <TextView android:background="#7fffffff" style="@style/home_push_separate_solid_line" />
        <LinearLayout android:gravity="center" android:layout_gravity="top" android:orientation="horizontal" android:layout_width="fill_parent" style="@style/home_push_center_layout">
            <ImageView android:id="@id/icon" android:background="@drawable/transparent_pic" android:src="@drawable/push_icon_light" style="@style/home_push_center_icon" />
            <TextView android:textColor="#ffffffff" android:id="@id/text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/app_name" android:maxLines="3" android:layout_weight="1.0" style="@style/home_push_center_text" />
            <ImageView android:id="@id/rightArrow" android:visibility="gone" android:layout_width="wrap_content" android:src="@drawable/icon_setting_right_arrow" android:scaleType="center" style="@style/home_push_center_arrow" />
            <LinearLayout android:orientation="horizontal" android:id="@id/share" android:layout_width="wrap_content" android:layout_height="112.0dip">
                <ImageView android:id="@id/share_separate_line" android:layout_width="wrap_content" android:src="@drawable/push_bg_dashed_line" android:scaleType="center" style="@style/home_push_separate_dashed_line" />
                <ImageView android:background="@drawable/common_touch_bg" android:src="@drawable/push_icon_share" android:scaleType="center" style="@style/home_push_center_share_button" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</merge>